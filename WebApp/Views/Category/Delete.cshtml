@model WebApp.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<a asp-action="index" class="btn btn-secondary mb-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" width="35px" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.707-10.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L9.414 11H13a1 1 0 100-2H9.414l1.293-1.293z" clip-rule="evenodd" />
    </svg>
</a>
<form method="post" class="col-12 col-md-6 col-xl-4 mx-auto">
    <div class="bg-light p-3 mt-4 rounded-2">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for=Name></label>
            <input asp-for=Name class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-primary bg-danger text-white">Delete</button>
        </div>
    </div>
</form>
